                  </div>
                  <div class="card-footer">
                    <a target="_blank" href="<%= data1.permalink %>" class="btn btn-primary">Comprar</a>  <!-- Enlace para comprar el producto -->
                  </div>
                </div>
                <% }); %> <!-- Finalizar el bucle 'forEach' -->
